pipeline {
    agent {
        dockerfile {
            label params.AGENT_LABEL
            dir params.DOCKER_DIR
            reuseNode true
        }
    }
    stages {
        stage('Run Dacapo') {
            when {
                expression { params.RUN_DACAPO == true }
            }
            environment {
                SAPMACHINE_GIT_REPO = 'github.com/SAP/SapMachine.git'
                DACAPO_CP = '/opt/dacapo/dacapo.jar'
                SKIP_BUILD = 'SKIP_BUILD'
            }
            steps {            
                sh "echo 'run dacapo'"
                sh "python --version"
                sh "echo JAR-Path: ${env.DACAPO_CP}"
                def ret = sh(script: "python lib/run_dacapo.py ${env.DACAPO_CP} ${env.SKIP_BUILD}", returnStdout: true)
                println ret
            }                
        }
    }
}
