pipeline {
    agent {
        dockerfile {
            label params.AGENT_LABEL
            dir params.DOCKER_DIR
            reuseNode true
        }
    }
    stages {
        stage('Run Dacapo') {
            when {
                expression { params.RUN_DACAPO == true }
            }
            environment {
                SAPMACHINE_GIT_REPO = 'github.com/SAP/SapMachine.git'
                DACAPO_CP = '/opt/dacapo/dacapo.jar'
                SKIP_BUILD = 'SKIP_BUILD'
            }
            steps {            
                sh "echo 'run dacapo'"
                sh "python --version"
                sh "echo JAR-Path: ${env.DACAPO_CP}"
                sh "python lib/run_dacapo.py ${env.DACAPO_CP} ${env.SKIP_BUILD} > pythonrun.log"
            }                
        }
        post {
            success {
              echo 'succeeeded!'
            }
            unstable {
              echo 'unstable :/'
            }
            failure {
              echo 'failed :('
            }
            changed {
              echo 'Things were different before...'
            }
            unsuccessful {
              echo 'unscuccessful :('
            }
        }
    }
}
